---
import Layout from '../components/Layout.astro';
import profile from '../data/profile.json';
---

<Layout title={`About | ${profile.name}`} description={`Learn more about ${profile.name}`}>
  <main class="main">
    <div class="container">
      <header class="page-header">
        <h1 class="page-title">About <em>Kimberly</em></h1>
        <p class="page-subtitle">
          Get to know the dancer behind the movement
        </p>
      </header>

      <section class="about-section">
        <div class="about-image">
          <div class="about-image-frame">
            {profile.aboutPhoto ? (
              <img src={profile.aboutPhoto} alt={profile.name} />
            ) : (
              <div class="hero-image-placeholder">
                <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <path d="M8 14s1.5 2 4 2 4-2 4-2"></path>
                  <line x1="9" y1="9" x2="9.01" y2="9"></line>
                  <line x1="15" y1="9" x2="15.01" y2="9"></line>
                </svg>
                <span>Photo coming soon</span>
              </div>
            )}
          </div>
        </div>

        <div class="about-content">
          <h2>A Passion for <em>Dance</em></h2>
          <p>
            {profile.bio}
          </p>
          <p>
            Whether on stage or in the studio, Kimberly brings dedication and creativity to every movement. Dance is not just an activityâ€”it's a way of expressing emotions, telling stories, and connecting with others.
          </p>

          {profile.styles && profile.styles.length > 0 && (
            <>
              <h3 style="font-family: var(--font-display); font-size: 1.25rem; margin-top: var(--space-lg); margin-bottom: var(--space-sm); color: var(--black);">
                Dance Styles
              </h3>
              <ul class="about-list">
                {profile.styles.map((style: string) => (
                  <li>{style}</li>
                ))}
              </ul>
            </>
          )}

          {profile.achievements && profile.achievements.length > 0 && (
            <>
              <h3 style="font-family: var(--font-display); font-size: 1.25rem; margin-top: var(--space-lg); margin-bottom: var(--space-sm); color: var(--black);">
                Highlights
              </h3>
              <ul class="about-list">
                {profile.achievements.map((achievement: string) => (
                  <li>{achievement}</li>
                ))}
              </ul>
            </>
          )}
        </div>
      </section>
    </div>
  </main>
</Layout>
